# Display commands
@help:
	just --list


# Set up repo
@init:
  uv sync


# Dev server
@serve:
  uv run uvicorn main:app --reload --port 8821 --host 0.0.0.0


# Release backend code to production server
@release:
  rsync -avz \
    --delete \
    --exclude=__pycache__ \
    --exclude=.DS_Store \
    --exclude=.venv \
    ./ \
    tools:~/gtsf-backend
